{
	"languageserver": {
		"golang": {
			"command": "gopls",
			"rootPatterns": [
				"go.work",
				"go.mod",
				".vim/",
				".git/",
				".hg/"
			],
			"filetypes": [
				"go"
			],
			"initializationOptions": {
				"usePlaceholders": true
			},
			"trace.server": "verbose"
		},
		"lua": {
			"command": "lua-language-server",
			"filetypes": [
				"lua"
			],
			"rootPatterns": [
				".luarc.json",
				".luacheckrc",
				".stylua.toml",
				"stylua.toml",
				"selene.toml",
				".git"
			],
			"settings": {
				"Lua": {
					"telemetry": {
						"enable": false
					}
				}
			}
		},
		"typescript": {
			"command": "typescript-language-server",
			"args": [
				"--stdio"
			],
			"filetypes": [
				"javascript",
				"javascriptreact",
				"javascript.jsx",
				"typescript",
				"typescriptreact",
				"typescript.tsx"
			],
			"rootPatterns": [
				"package.json",
				"tsconfig.json",
				"jsconfig.json",
				".git"
			],
			"initializationOptions": {
				"hostInfo": "neovim"
			}
		}
	},
	"coc.preferences.formatOnSaveFiletypes": [
		"go",
		"lua",
		"json",
		"typescript",
		"javascript",
		"html",
		"css"
	],
	"diagnostic.enable": true,
	"diagnostic.warningSign": "",
	"diagnostic.errorSign": "",
	"diagnostic.hintSign": "",
	"diagnostic.infoSign": "",
	"diagnostic.refreshOnInsertMode": true,
	"Lua.telemetry.enable": false
}
